<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:background="#66ddff00"
        android:id="@+id/bottom_wrapper"
        android:layout_width="wrap_content"
        android:weightSum="3"
        android:layout_height="match_parent">
        <!--What you want to show-->

        <Button
            android:id="@+id/btn_addAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加相册"
            android:background="#99FF99"/>

        <Button
            android:id="@+id/btn_updateAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="更新相册"
            android:background="#CCFF33"/>

        <Button
            android:id="@+id/btn_deleteAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#888800"
            android:text="删除相册"/>
    </LinearLayout>


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp">
<LinearLayout
    android:id="@+id/LL_groupView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <com.android.volley.toolbox.NetworkImageView

            android:id="@+id/IV_album_img"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

    <TextView
        android:background="#FFFFFFFF"
        android:id="@+id/TV_album_name"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"/>


</LinearLayout>
    </android.support.v7.widget.CardView>
    </com.daimajia.swipe.SwipeLayout>